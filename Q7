//Harshad number

#include <stdio.h>

int main() 
{
    int n,N,s=0;
    printf("Enter the number: ");
    scanf("%d",&n);
    N=n;
    while(n>0)
    {
        s=s+(n%10);
        n=n/10;
    }
    if(N%s==0)
        printf("\n%d is a harshad number.",N);
    else
        printf("\n%d is not a harshad number.",N);
    return 0;
}
